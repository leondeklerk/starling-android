<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/type_save"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="@string/edit_type_save"
        android:textAlignment="textStart"
        android:textSize="16sp"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textAllCaps="false"
        app:icon="@drawable/ic_baseline_check_24"
        app:iconPadding="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/type_copy"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="@string/edit_save_copy"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:textAllCaps="false"
        app:iconPadding="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:icon="@drawable/ic_baseline_library_add_check_24"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:layout_constraintTop_toBottomOf="@id/type_save" />

</androidx.constraintlayout.widget.ConstraintLayout>
