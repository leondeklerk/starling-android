<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.leondeklerk.starling.media.VideoViewModel" />
    </data>


    <FrameLayout
        android:id="@+id/video_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.exoplayer2.ui.StyledPlayerView
            app:resize_mode="fit"
            app:use_controller="false"
            app:show_buffering="always"
            android:id="@+id/videoView"
            app:surface_type="texture_view"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/video_pause"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="@color/black"
                android:alpha="0.67"
                android:padding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:iconPadding="0dp"
                app:icon="@drawable/ic_outline_pause_24"
                app:iconTint="@color/white"
                app:iconSize="24dp"
                app:iconGravity="textStart"
                app:shapeAppearanceOverlay="@style/Starling.Widget.Button.Circle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Widget.MaterialComponents.Button.Icon" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/video_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="18:20"
                app:video_duration="@{viewModel.position}"
                app:layout_constraintBottom_toBottomOf="@+id/video_progress"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/video_progress" />

            <com.google.android.material.slider.Slider
                android:id="@+id/video_progress"
                android:layout_marginBottom="80dp"
                app:thumbRadius="6dp"
                app:trackHeight="2dp"
                app:labelBehavior="gone"
                app:layout_constraintEnd_toStartOf="@id/video_duration"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/video_position">

            </com.google.android.material.slider.Slider>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/video_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="8dp"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:video_duration="@{viewModel.item.duration}"
                app:layout_constraintEnd_toStartOf="@id/video_sound"
                tools:text="25:23"
                app:layout_constraintTop_toTopOf="@+id/video_progress"
                app:layout_constraintBottom_toBottomOf="@+id/video_progress" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:checked="true"
                android:id="@+id/video_sound"
                android:buttonTint="@color/white"
                android:button="@drawable/sl_video_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:iconPadding="0dp"
                app:iconTint="@color/white"
                app:iconSize="24dp"
                app:iconGravity="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/video_progress"
                app:layout_constraintTop_toTopOf="@+id/video_progress" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>


</layout>
